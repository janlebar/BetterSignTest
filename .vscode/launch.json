{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript",
            "program": "${workspaceFolder}/testfour.ts", // Path to your TypeScript file
            "runtimeArgs": [
                "-r",
                "ts-node/register" // Register ts-node to run TypeScript
            ],
            "console": "integratedTerminal", // Use the integrated terminal for console output
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js" // Adjust if you have a different output directory
            ],
            "sourceMaps": true // Enable source maps for better debugging
        }
    ]
}